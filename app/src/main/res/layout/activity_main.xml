<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true">

        <!-- Screen content -->
        <!-- Use app:layout_behavior="@string/appbar_scrolling_view_behavior" to fit below top app bar -->
        <!--    输入文本框-->
        <TextView
            android:id="@+id/historyView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:autoSizeMaxTextSize="28sp"
            android:autoSizeTextType="uniform"
            android:gravity="top|end"
            android:paddingHorizontal="8dp"
            android:paddingTop="0dp"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="?colorOnSurfaceVariant"
            android:textIsSelectable="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="64sp"
            android:autoSizeTextType="uniform"
            android:gravity="top|end"
            android:paddingHorizontal="8dp"
            android:paddingTop="0dp"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="?colorOnSurface"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/historyView" />

        <ImageButton
            android:id="@+id/speak"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@android:color/transparent"
            android:importantForAccessibility="no"
            android:src="@drawable/speech_text"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent" />

        <!--    结果文本框-->
        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeTextType="uniform"
            android:gravity="bottom|end"
            android:paddingStart="48dp"
            android:paddingEnd="8dp"
            android:text=""
            android:textIsSelectable="true"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline2"
            tools:ignore="RtlSymmetry" />

        <TableLayout
            android:id="@+id/gridlayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:animateLayoutChanges="true"
            android:paddingBottom="8dp"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="0"
                android:padding="0dp">

                <Button
                    android:id="@+id/factorial"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="!~!!"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/percentage"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="%"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/time"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="^"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/SHOW_ALL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:importantForAccessibility="no"
                    android:padding="0dp"
                    android:src="@drawable/combined_drawable_down" />
            </TableRow>

            <TableRow
                android:id="@+id/hideRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="0"
                android:padding="0dp"
                android:visibility="gone"
                tools:visibility="visible">

                <Button
                    android:id="@+id/e"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="e"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/pi"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="π"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/g"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="log"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/switchViews"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="⇋"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/hideRow1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="0"
                android:padding="0dp"
                android:visibility="gone"
                tools:visibility="visible">

                <Button
                    android:id="@+id/sin"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="sin"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/cos"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="cos"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/tan"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="tan"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/cot"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="cot"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Clean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FB7730"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="AC"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/brackets"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondaryContainer"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="( )"
                    android:textAlignment="center"
                    android:textColor="?colorOnSecondaryContainer"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/inverse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondaryContainer"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="+/-"
                    android:textAlignment="center"
                    android:textColor="?colorOnSecondaryContainer"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondaryContainer"
                    android:padding="0dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="?colorOnSecondaryContainer"
                    android:textSize="26sp"
                    tools:ignore="HardcodedText" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/seven"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="7"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/eight"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="8"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nine"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="9"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondaryContainer"
                    android:padding="0dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="?colorOnSecondaryContainer"
                    android:textSize="26sp"
                    tools:ignore="HardcodedText" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/four"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/five"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/six"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/multiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondaryContainer"
                    android:padding="0dp"
                    android:text="×"
                    android:textAlignment="center"
                    android:textColor="?colorOnSecondaryContainer"
                    android:textSize="26sp"
                    tools:ignore="HardcodedText" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/one"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/two"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/three"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/divide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?colorSecondaryContainer"
                    android:padding="0dp"
                    android:text="÷"
                    android:textAlignment="center"
                    android:textColor="?colorOnSecondaryContainer"
                    android:textSize="26sp"
                    tools:ignore="HardcodedText" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dot"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="."
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/zero"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="⌫"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/equal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="="
                    android:textAlignment="center"
                    android:textSize="26sp"
                    tools:ignore="HardcodedText" />
            </TableRow>

        </TableLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.29" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.21" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
